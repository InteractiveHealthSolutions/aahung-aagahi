<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <include
            android:id="@+id/layout_header"
            layout="@layout/text_header" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin_normal"
                android:paddingTop="@dimen/padding_normal">

            </com.google.android.material.chip.ChipGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/chip_group"
                android:orientation="vertical"
                android:weightSum="10"
                >

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_normal"
                    android:padding="@dimen/padding_normal"
                    android:background="@drawable/dropdown_background"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:name="com.ihsinformatics.aahung.fragments.SelectUserFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7.3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginRight="16dp"
                    android:padding="@dimen/padding_normal"
                    tools:context=".fragments.SelectUserFragment"
                    tools:listitem="@layout/fragment_user" />


                <Button
                    android:id="@+id/done"
                    style="@style/AppTheme.Button"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:padding="@dimen/padding_normal"
                    android:text="Done" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</layout>