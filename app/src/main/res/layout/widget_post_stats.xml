<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdown_background"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_normal"
            android:text="Facebook"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dropdown_background"

                android:gravity="center">

                <EditText
                    android:id="@+id/likes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_like"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:hint="Number of Likes"
                    android:maxLength="5"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_weight="1"
                android:background="@drawable/dropdown_background"
                android:gravity="center">


                <EditText
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_comments"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:hint="Number of Comments"
                    android:maxLength="5"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dropdown_background"
                android:gravity="center">

                <EditText
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_shares"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"

                    android:hint="Number of Shares"
                    android:maxLength="5"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

   <!--         <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_weight="1"
                android:background="@drawable/dropdown_background"
                android:gravity="center">

                <EditText
                    android:id="@+id/reach"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_reached"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:hint="Number of boosted reached"
                    android:maxLength="5"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>-->

        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdown_background"
        android:gravity="center"
        android:orientation="vertical">

        <include
            android:id="@+id/wasPostBoosted"
            layout="@layout/widget_radio" />

        <EditText
            android:id="@+id/numberOfBoosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_reached"
            android:gravity="center"
            android:inputType="number"
            android:visibility="gone"
            android:digits="0123456789"
            android:hint="Number of boosted reached"
            android:maxLength="5"
            android:textColor="@color/colorAccent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dropdown_background"
            android:gravity="center">

            <EditText
                android:id="@+id/url"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/web"
                android:drawablePadding="@dimen/padding_normal"
                android:inputType="textUri"
                android:text="https://"
                android:hint="Number of Shares"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</layout>