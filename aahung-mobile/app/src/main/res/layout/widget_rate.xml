<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal">

        <include
            android:id="@+id/layout_header"
            layout="@layout/text_header" />


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:layout_marginTop="20dp"
                android:button="@android:color/transparent"
                android:textSize="@dimen/text_size_small"
                android:drawableTop="@drawable/strongly_disagree_selector"
                android:gravity="center"
                android:tag="1"
                android:text="Strongly \nDisagree"

                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:layout_marginTop="20dp"
                android:button="@android:color/transparent"
                android:textSize="@dimen/text_size_small"
                android:drawableTop="@drawable/disagree_selector"
                android:gravity="center"
                android:tag="2"
                android:text="Disagree" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/text_size_small"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/agree_disagree_selector"
                android:gravity="center"
                android:tag="3"
                android:text="Neither \nAgree or \n Disagree"

                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:layout_marginTop="20dp"
                android:button="@android:color/transparent"
                android:drawableTop="@drawable/agree_selector"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:tag="4"
                android:text="Agree" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:layout_marginTop="20dp"
                android:button="@android:color/transparent"
                android:textSize="@dimen/text_size_small"
                android:drawableTop="@drawable/strongly_agree_selector"
                android:gravity="center"
                android:tag="5"
                android:text="Strongly \nAgree" />


        </RadioGroup>
    </LinearLayout>
</layout>