<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_normal"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_corner"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_large"
        >

        <ImageView
            android:id="@+id/form_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ic_form_vector"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="5">
            <TextView
                android:id="@+id/form_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_title"
                android:text="Institution Details Form"
                android:textColor="@color/colorAccent"
                />

            <TextView
                android:id="@+id/form_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:text="Institution Details Form"
                android:textColor="@color/black"
                />



        </LinearLayout>

        <ImageView
            android:id="@+id/location_dependent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:visibility="gone"
            android:src="@drawable/ic_location_marker"
            />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/layout_locked"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_purple"
        android:layout_gravity="center"
        android:clickable="true"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="@dimen/padding_large"
            android:src="@drawable/ic_padlock" />


    </FrameLayout>


</androidx.cardview.widget.CardView>